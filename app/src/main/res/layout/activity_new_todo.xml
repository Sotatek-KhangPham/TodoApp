<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.NewTodoActivity"
    android:gravity="center"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:background="#F5F5F5">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="18mm"
        android:textSize="14sp"
        android:hint="Việc cần làm của bạn......"
        android:id="@+id/edt_newtodo_title"
        android:maxLines="5"
        android:layout_above="@id/linearLayout"
        android:layout_marginBottom="10dp"
        android:singleLine="false"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:gravity="center">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_add_new_todo"
            android:text="Thêm"

            android:layout_marginTop="10dp"
            android:layout_alignParentBottom="true"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_cancel_new_todo"
            android:text="Hủy"

            android:layout_marginRight="30dp"
            android:layout_toLeftOf="@id/btn_add_new_todo"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="10dp"/>

    </LinearLayout>




</RelativeLayout>